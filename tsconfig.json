{
    "ts-node": {
      "files": true
    },
    "compilerOptions": {
      "lib": ["ES2022", "dom"],
      "target": "ES2022",
      "useDefineForClassFields": true,
      "module": "commonjs",
      "skipLibCheck": false,
      "outDir": "dist",
      "rootDir": "src",
      "esModuleInterop": true,
      "moduleResolution": "node",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "strictPropertyInitialization": false,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "baseUrl": "src",
      "paths": {
        "@db/*": ["db/*"],
        "@enums/*": ["types/enums/*"],
        "@config": ["config/"],
        "@routes": ["routes/"],
        "@config/*": ["config/*"],
        "@routes/*": ["routes/*"],
        "@services/*": ["services/*"],
        "@factories/*": ["factories/*"],
      }
    },
    "references": [
      {
        "path": "../shared/tsconfig.json"
      }
    ],
    "exclude": ["dist/**"]
  }
  