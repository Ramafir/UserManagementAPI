{
    "name": "usermanagement-api",
    "version": "1.0.0",
    "description": "User Management API | Recruitment Exlabs Task",
    "main": "src/index.ts",
    "scripts": {
        "dc-conf": "npm run dc-conf-dev",
        "dc-conf-dev": "docker-compose -f docker-compose.yml",
        "dc-ps": "npm run --silent dc-conf -- -- ps",
        "dc-logs": "npm run --silent dc-conf -- -- logs -f",
        "dc-tail": "npm run --silent dc-logs -- --tail 5",
        "dc-up": "npm run --silent dc-conf -- -- up -d",
        "dc-down": "npm run --silent dc-conf -- -- down",
        "dev": "ts-node-dev --respawn --transpile-only src/bin/server.ts",
        "queues": "ts-node-dev --respawn --transpile-only src/bin/queues.ts",
        "scheduler": "ts-node-dev --respawn --transpile-only src/bin/scheduler.ts",
        "dev-all": "concurrently \"npm run dev\" \"npm run queues\" \"npm run scheduler\"",
        "dev-db-create": "node --require ts-node/register src/scripts/db-create.ts",
        "dev-db-migrate": "node --require ts-node/register src/scripts/db-migrate.ts",
        "dev-db-seed-work": "node --require ts-node/register src/scripts/db-seed-work.ts",
        "dev-db-drop": "node --require ts-node/register src/scripts/db-drop.ts",
        "dev-db-setup-base": "npm run dev-db-create && npm run dev-db-migrate",
        "dev-db-setup-base-fresh": "npm run dev-db-drop && npm run dev-db-setup-base",
        "dev-db-setup": "npm run dev-db-setup-base",
        "dev-db-setup-fresh": "npm run dev-db-drop && npm run dev-db-setup-base",
        "dev-db-setup-work": "npm run dev-db-setup-base && npm run dev-db-seed-work",
        "dev-db-setup-work-fresh": "npm run dev-db-drop && npm run dev-db-setup-base && npm run dev-db-seed-work",
        "build": "rm -rf ./dist && tsc --project tsconfig.json && tsc-alias -p tsconfig.json",
        "eslint": "eslint . --fix --cache --ignore-path=.gitignore",
        "type-check": "tsc --noEmit",
        "prettier": "prettier --write .",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "engines": {
        "node": "^20.0.0",
        "npm": "^10.0.0"
    },
    "_moduleAliases": {
        "@": "./src"
    },
    "author": "daniel.kolban",
    "license": "ISC",
    "dependencies": {
        "colors": "^1.4.0",
        "connect-redis": "^8.0.1",
        "cors": "2.8.5",
        "deepmerge": "^4.3.1",
        "dotenv": "16.4.7",
        "env-var": "7.5.0",
        "express": "4.21.2",
        "express-async-errors": "3.1.1",
        "fs-extra": "11.3.0",
        "helmet": "8.0.0",
        "http-status-codes": "^2.3.0",
        "loadash": "^1.0.0",
        "module-alias": "^2.2.3",
        "mysql2": "3.12.0",
        "node-dependency-injection": "^3.2.2",
        "redis": "^4.7.0",
        "sequelize": "6.37.5",
        "sequelize-typescript": "2.1.6",
        "ts-node": "10.9.2",
        "typedi": "^0.10.0",
        "typeorm": "0.3.20",
        "typeorm-extension": "3.6.3",
        "umzug": "^3.8.2"
    },
    "devDependencies": {
        "@types/cors": "2.8.17",
        "@types/express": "5.0.0",
        "@types/node": "20.11.19",
        "@types/lodash": "^4.17.14",
        "@types/sequelize": "4.28.15",
        "eslint": "9.19.0",
        "eslint-config-prettier": "10.0.1",
        "eslint-plugin-perfectionist": "4.7.0",
        "eslint-plugin-you-dont-need-lodash-underscore": "6.14.0",
        "prettier": "3.4.2",
        "ts-node": "10.9.2",
        "ts-node-dev": "2.0.0",
        "tsconfig-paths": "4.2.0",
        "tsc-alias": "1.8.8",
        "typescript": "5.7.3"
    }
}
